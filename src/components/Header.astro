---
// Header.astro - Premium fixed header with scroll detection and mobile menu
// No React. Pure Astro + vanilla JS for scroll and menu control.

interface Props {
  currentPath?: string;
}

const { currentPath = "/" } = Astro.props;

const navLeft = [
  { label: "FORMAL", href: "/formal-gowns-richmond-ky" },
  { label: "BRIDAL", href: "/wedding-dresses-richmond-ky" },
  { label: "QUIÃ‘CE", href: "/quinceanera-dresses-richmond-ky" },
];

const navRight = [
  { label: "EVENTS", href: "/event-planning-richmond-ky" },
  { label: "FLORAL", href: "/wedding-prom-florist-richmond-ky" },
];

const ctaButton = {
  label: "BOOK APPOINTMENT",
  href: "/book-an-appointment",
};
---

<header id="header" class="header">
  <!-- Desktop Navigation -->
  <nav class="header__desktop-nav">
    <!-- Left Navigation -->
    <ul class="header__nav-left">
      {navLeft.map((link) => (
        <li>
          <a
            href={link.href}
            class={`header__link ${currentPath === link.href ? "header__link--active" : ""}`}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Center Brand -->
    <div class="header__brand">
      <a href="/" class="header__brand-link">
        <span class="header__brand-text-main">VERO'S</span>
        <span class="header__brand-text-sub">BOUTIQUE</span>
      </a>
    </div>

    <!-- Right Navigation + CTA -->
    <div class="header__nav-right-wrapper">
      <ul class="header__nav-right">
        {navRight.map((link) => (
          <li>
            <a
              href={link.href}
              class={`header__link ${currentPath === link.href ? "header__link--active" : ""}`}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
      <a href={ctaButton.href} class="header__cta button button--outline">
        {ctaButton.label}
      </a>
    </div>
  </nav>

  <!-- Mobile Navigation -->
  <nav class="header__mobile-nav">
    <!-- Hamburger Icon -->
    <button
      id="hamburger"
      class="header__hamburger"
      aria-expanded="false"
      aria-label="Toggle navigation menu"
    >
      <span class="header__hamburger-line"></span>
      <span class="header__hamburger-line"></span>
      <span class="header__hamburger-line"></span>
    </button>

    <!-- Mobile Brand (Centered) -->
    <a href="/" class="header__brand-mobile">
      <span class="header__brand-text-main">VERO'S</span>
      <span class="header__brand-text-sub">BOUTIQUE</span>
    </a>

    <!-- Mobile CTA -->
    <a href={ctaButton.href} class="header__mobile-cta button button--outline">
      BOOK
    </a>
  </nav>

  <!-- Mobile Slide Menu -->
  <div id="mobile-menu" class="header__mobile-menu" aria-hidden="true">
    <ul class="header__mobile-menu-list">
      {navLeft.map((link) => (
        <li>
          <a
            href={link.href}
            class={`header__mobile-menu-link ${currentPath === link.href ? "header__mobile-menu-link--active" : ""}`}
          >
            {link.label}
          </a>
        </li>
      ))}
      {navRight.map((link) => (
        <li>
          <a
            href={link.href}
            class={`header__mobile-menu-link ${currentPath === link.href ? "header__mobile-menu-link--active" : ""}`}
          >
            {link.label}
          </a>
        </li>
      ))}
      <li>
        <a
          href="/gallery"
          class={`header__mobile-menu-link ${currentPath === "/gallery" ? "header__mobile-menu-link--active" : ""}`}
        >
          GALLERY
        </a>
      </li>
      <li class="header__mobile-menu-divider"></li>
      <li>
        <a href={ctaButton.href} class="header__mobile-menu-cta">
          {ctaButton.label}
        </a>
      </li>
    </ul>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background-color: white;
    transition: background-color 0.3s ease, backdrop-filter 0.3s ease;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .header.scrolled {
    background-color: rgba(0, 0, 0, 0.55);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .header.scrolled .header__link,
  .header.scrolled .header__brand-link {
    color: white;
  }

  .header.scrolled .header__cta {
    border-color: rgba(255, 255, 255, 0.3);
    color: white;
  }

  .header.scrolled .header__cta:hover {
    background-color: white;
    color: black;
  }

  /* ========== DESKTOP NAV ========== */
  .header__desktop-nav {
    display: none;
    align-items: center;
    grid-template-columns: 1fr auto 1fr;
    padding: 1.5rem 2rem;
    max-width: 1380px;
    margin: 0 auto;
    gap: 2rem;
    width: 100%;
  }

  @media (min-width: 1024px) {
    .header__desktop-nav {
      display: grid;
    }
  }

  @media (min-width: 1280px) {
    .header__desktop-nav {
      padding: 1.5rem 3rem;
      gap: 2.5rem;
    }
  }

  .header__nav-left {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2.5rem;
    justify-self: end;
    align-items: center;
  }

  .header__nav-right {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2.5rem;
    justify-self: start;
    align-items: center;
  }

  .header__nav-right-wrapper {
    display: flex;
    align-items: center;
    gap: 2.5rem;
    justify-self: start;
  }

  .header__link {
    font-size: 0.8125rem;
    font-weight: 600;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--color-black);
    text-decoration: none;
    transition: color 0.25s ease;
    position: relative;
    padding-bottom: 0.25rem;
  }

  .header__link:hover {
    color: var(--color-gold);
  }

  .header__link--active {
    color: var(--color-gold);
  }

  /* ========== BRAND ========== */
  .header__brand,
  .header__brand-mobile {
    text-decoration: none;
    text-align: center;
    flex-shrink: 0;
  }

  .header__brand {
    padding: 0 2rem;
    justify-self: center;
    text-align: center;
  }

  @media (min-width: 1280px) {
    .header__brand {
      padding: 0 2.5rem;
    }
  }

  .header__brand-link {
    text-decoration: none;
    color: var(--color-black);
    transition: color 0.3s ease;
  }

  .header__brand-text-main {
    display: block;
    font-family: var(--font-serif);
    font-size: 1.125rem;
    font-weight: 400;
    letter-spacing: 0.2em;
    color: inherit;
  }

  .header__brand-text-sub {
    display: block;
    font-family: var(--font-sans);
    font-size: 0.625rem;
    font-weight: 700;
    letter-spacing: 0.4em;
    text-transform: uppercase;
    color: var(--color-gold);
    margin-top: 0.25rem;
  }

  .header.scrolled .header__brand-text-sub {
    color: var(--color-gold);
  }

  .header__brand-mobile .header__brand-text-sub {
    color: var(--color-gold);
  }

  .header.scrolled .header__brand-mobile .header__brand-text-sub {
    color: var(--color-gold);
  }

  /* ========== CTA BUTTON (DESKTOP) ========== */
  .header__cta {
    padding: 0.75rem 1.75rem;
    font-size: 0.8125rem;
    font-weight: 600;
    white-space: nowrap;
    border: 1px solid var(--color-black);
    background: transparent;
    color: var(--color-black);
    text-decoration: none;
    transition: all 0.25s ease;
  }

  .header__cta:hover {
    border-color: var(--color-gold);
    color: var(--color-gold);
  }

  .header.scrolled .header__cta {
    border-color: rgba(255, 255, 255, 0.3);
    color: white;
  }

  .header.scrolled .header__cta:hover {
    border-color: var(--color-gold);
    color: var(--color-gold);
    background-color: transparent;
  }

  /* ========== MOBILE NAV ========== */
  .header__mobile-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    position: relative;
    height: 70px;
  }

  @media (min-width: 1024px) {
    .header__mobile-nav {
      display: none;
    }
  }

  .header__brand-mobile {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    text-decoration: none;
    color: var(--color-black);
    transition: color 0.3s ease;
  }

  .header.scrolled .header__brand-mobile {
    color: white;
  }

  .header__brand-mobile span {
    display: block;
  }

  .header__brand-mobile .header__brand-text-main {
    font-size: 0.875rem;
    letter-spacing: 0.15em;
  }

  .header__brand-mobile .header__brand-text-sub {
    font-size: 0.5rem;
    letter-spacing: 0.2em;
    margin-top: 0.125rem;
  }

  /* ========== HAMBURGER ========== */
  .header__hamburger {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    padding: 0;
    width: 24px;
    height: 24px;
    align-items: center;
    justify-content: center;
    transition: opacity 0.2s ease;
    position: relative;
    z-index: 102;
  }

  .header__hamburger:hover {
    opacity: 0.6;
  }

  .header__hamburger:focus {
    outline: 2px solid var(--color-gold);
    outline-offset: 2px;
  }

  .header__hamburger-line {
    display: block;
    width: 20px;
    height: 2px;
    background-color: var(--color-black);
    transition: all 0.3s ease;
  }

  .header.scrolled .header__hamburger-line {
    background-color: white;
  }

  .header__hamburger.active .header__hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(10px, 10px);
  }

  .header__hamburger.active .header__hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .header__hamburger.active .header__hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }

  /* ========== MOBILE CTA ========== */
  .header__mobile-cta {
    padding: 0.625rem 1.25rem;
    font-size: 0.7rem;
    white-space: nowrap;
    position: relative;
    z-index: 102;
  }

  /* ========== MOBILE SLIDE MENU ========== */
  .header__mobile-menu {
    display: none;
    position: fixed;
    top: 70px;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(10px);
    overflow-y: auto;
    z-index: 99;
    padding: 2rem 1.5rem;
    animation: slideIn 0.3s ease forwards;
  }

  .header__mobile-menu[aria-hidden="false"] {
    display: block;
  }

  @keyframes slideIn {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .header__mobile-menu-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .header__mobile-menu-link {
    display: block;
    padding: 1.25rem 0;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: white;
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: opacity 0.2s ease;
  }

  .header__mobile-menu-link:hover {
    opacity: 0.6;
  }

  .header__mobile-menu-link--active {
    opacity: 0.6;
  }

  .header__mobile-menu-link:focus {
    outline: 2px solid var(--color-gold);
    outline-offset: -2px;
  }

  .header__mobile-menu-divider {
    height: 1px;
    background-color: rgba(255, 255, 255, 0.1);
    margin: 1rem 0;
    list-style: none;
  }

  .header__mobile-menu-cta {
    display: block;
    padding: 1.25rem 0;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: white;
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: opacity 0.2s ease;
  }

  .header__mobile-menu-cta:hover {
    opacity: 0.6;
  }

  .header__mobile-menu-cta:focus {
    outline: 2px solid var(--color-gold);
    outline-offset: -2px;
  }
</style>

<script>
  function initHeader() {
    const header = document.getElementById("header");
    const hamburger = document.getElementById("hamburger");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuLinks = mobileMenu?.querySelectorAll(".header__mobile-menu-link, .header__mobile-menu-cta");

    // Scroll detection
    function handleScroll() {
      if (window.scrollY > 20) {
        header?.classList.add("scrolled");
      } else {
        header?.classList.remove("scrolled");
      }
    }

    // Mobile menu toggle
    function toggleMenu() {
      const isOpen = hamburger?.getAttribute("aria-expanded") === "true";
      hamburger?.setAttribute("aria-expanded", (!isOpen).toString());
      hamburger?.classList.toggle("active");
      
      if (mobileMenu) {
        mobileMenu.setAttribute("aria-hidden", isOpen.toString());
      }
    }

    // Close menu on link click
    function closeMenu() {
      hamburger?.setAttribute("aria-expanded", "false");
      hamburger?.classList.remove("active");
      if (mobileMenu) {
        mobileMenu.setAttribute("aria-hidden", "true");
      }
      hamburger?.focus();
    }

    // Close menu on ESC
    function handleEsc(e: KeyboardEvent) {
      if (e.key === "Escape") {
        closeMenu();
      }
    }

    // Event listeners
    window.addEventListener("scroll", handleScroll);
    hamburger?.addEventListener("click", toggleMenu);
    menuLinks?.forEach((link) => {
      link.addEventListener("click", closeMenu);
    });
    document.addEventListener("keydown", handleEsc);

    // Cleanup
    return () => {
      window.removeEventListener("scroll", handleScroll);
      hamburger?.removeEventListener("click", toggleMenu);
      menuLinks?.forEach((link) => {
        link.removeEventListener("click", closeMenu);
      });
      document.removeEventListener("keydown", handleEsc);
    };
  }

  // Initialize on page load
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initHeader);
  } else {
    initHeader();
  }
</script>

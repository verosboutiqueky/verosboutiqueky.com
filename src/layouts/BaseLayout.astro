---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Vero's Boutique | Luxury Private Fittings",
  description = "A Richmond, Kentucky destination for bridal gowns, formal wear, and bespoke floral event design.",
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#ffffff" />
    <link rel="canonical" href={`https://verosboutiqueky.com${Astro.url.pathname}`} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://verosboutiqueky.com/images/hero.webp" />
    <meta property="og:url" content={`https://verosboutiqueky.com${Astro.url.pathname}`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://verosboutiqueky.com/images/hero.webp" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header currentPath={currentPath} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  /* 
    Global styles are imported from src/styles/global.css
    All design tokens (:root variables) are centralized there.
    This style block applies layout-specific reset + main offset.
  */

  body {
    font-family: var(--font-sans);
    background-color: var(--color-ivory);
    color: var(--color-black);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* 
    Main offset: Compensates for fixed header (70px height).
    This is the ONLY place main padding-top is set â€” no double offsets.
    Hero + other sections have padding-top: 0 to avoid stacking.
  */
  main {
    display: block;
    padding-top: var(--header-height);
  }
</style>

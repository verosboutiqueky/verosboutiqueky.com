---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import EarlyOfferBannerForm from '../components/forms/EarlyOfferBannerForm.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  robots?: string;
}

const {
  title = "Vero's Boutique | Luxury Private Fittings",
  description = "A Richmond, Kentucky destination for bridal gowns, formal wear, and bespoke floral event design.",
  robots,
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#ffffff" />
    <link rel="canonical" href={`https://verosboutiqueky.com${Astro.url.pathname}`} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://verosboutiqueky.com/images/hero.webp" />
    <meta property="og:url" content={`https://verosboutiqueky.com${Astro.url.pathname}`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://verosboutiqueky.com/images/hero.webp" />
    {robots && <meta name="robots" content={robots} />}
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" onload="this.onload=null;this.rel='stylesheet'" />
    <noscript><link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" /></noscript>
    <!-- Turnstile Lazy Loader: loads only on first form interaction -->
    <script is:inline>
      (function () {
        let loaded = false;

        function loadTurnstile() {
          if (loaded) return;
          loaded = true;

          const s = document.createElement("script");
          s.src = "https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit";
          s.async = true;
          s.defer = true;
          s.onload = () => {
            // Render all placeholders
            document.querySelectorAll("[data-turnstile-placeholder]").forEach((el) => {
              if (el.dataset.rendered) return;
              el.dataset.rendered = "1";
              if (window.turnstile) {
                window.turnstile.render(el, { sitekey: el.dataset.sitekey });
              }
            });
          };
          document.head.appendChild(s);
        }

        // Trigger on first likely intent
        const triggers = ["focusin", "pointerdown", "keydown"];
        triggers.forEach((evt) => window.addEventListener(evt, loadTurnstile, { once: true, passive: true }));

        // Also expose loadTurnstile globally for programmatic calls
        window.loadTurnstile = loadTurnstile;
      })();
    </script>

    <!-- Google Analytics 4 (GA4): Idle Load + 3s Fallback (Lighthouse Optimized) -->
    <script is:inline>
      (function () {
        // Initialize dataLayer and consent defaults
        window.dataLayer = window.dataLayer || [];
        function gtag() { window.dataLayer.push(arguments); }
        gtag('js', new Date());

        // Set consent to 'denied' by default (future consent banner can update)
        gtag('consent', 'default', {
          'analytics_storage': 'denied',
          'ad_storage': 'denied',
          'ad_user_data': 'denied',
          'ad_personalization': 'denied'
        });

        // Track if GA4 has been loaded
        let ga4Loaded = false;

        function loadGA4() {
          if (ga4Loaded) return;
          ga4Loaded = true;

          // Update consent to 'granted' once script loads
          gtag('consent', 'update', {
            'analytics_storage': 'granted'
          });

          // Configure GA4 with measurement ID
          gtag('config', 'G-625TYW4PDE', {
            'page_path': window.location.pathname,
            'page_title': document.title
          });

          // Inject async gtag.js script
          const s = document.createElement("script");
          s.src = "https://www.googletagmanager.com/gtag/js?id=G-625TYW4PDE";
          s.async = true;
          document.head.appendChild(s);
        }

        // Primary: Load on idle callback (requestIdleCallback)
        if ('requestIdleCallback' in window) {
          requestIdleCallback(() => loadGA4(), { timeout: 3000 });
        } else {
          // Fallback: Load after 3 seconds if idle never fires
          setTimeout(() => loadGA4(), 3000);
        }

        // Expose gtag globally for event tracking (e.g., reviews.astro)
        window.gtag = gtag;
      })();
    </script>
  </head>
  <body>
    <Header currentPath={currentPath} />
    <EarlyOfferBannerForm />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  /* 
    Global styles are imported from src/styles/global.css
    All design tokens (:root variables) are centralized there.
    This style block applies layout-specific reset + main offset.
  */

  body {
    font-family: var(--font-sans);
    background-color: var(--color-ivory);
    color: var(--color-black);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* 
    Main offset: Compensates for fixed header (70px height).
    This is the ONLY place main padding-top is set â€” no double offsets.
    Hero + other sections have padding-top: 0 to avoid stacking.
  */
  main {
    display: block;
    padding-top: 0;
  }
</style>
